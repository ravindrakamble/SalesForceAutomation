<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:padding="10dip"
    android:background="@drawable/border_details">



    <ImageView
        android:id="@+id/icon"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/airoma_air_freshner" />


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/dashboard_txt"
        android:textSize="17sp"
        android:textStyle="bold"
        android:text="Name"
        android:layout_below="@+id/icon"/>
    <TextView
        android:id="@+id/actual_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:text="Actual Price : Rs.110"
        android:textColor="@color/dashboard_txt"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_below="@+id/title"/>


    <TextView
        android:id="@+id/selling_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="Selling Price : Rs. 99"
        android:textColor="@color/dashboard_txt"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_below="@+id/actual_price"/>
</RelativeLayout>