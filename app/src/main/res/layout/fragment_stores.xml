<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.r2apps.sfa.fragments.Stores"
    android:background="@drawable/border_details">

    <RelativeLayout
        android:id="@+id/rl_stores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dashboard_style"
        android:padding="10dp">

        <TextView
            android:id="@+id/txt_number_of_stores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shops Around you in 5 KM"
            android:textColor="@color/dashboard_txt"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show On Map"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/list_stores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_stores" />

</RelativeLayout>
